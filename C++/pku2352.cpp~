#include<iostream>
#include<cstdio>
#include<cstring>
#include<cmath>
#include<algorithm>

#define maxx 32005

using namespace std;

int s[maxx],ans[maxx];

int main()
{
	int n,x,y,tmp,left=0;
	while(scanf("%d",&n)!=EOF){
		memset(ans,0,sizeof(ans));
		memset(s,0,sizeof(s));
		for(int i=0;i<n;i++){
			scanf("%d %d",&x,&y);
			tmp=0;
			for(int j=0;j<=x;j++)
				tmp+=s[j];
			s[x]++;
			ans[tmp]++;
		}
		for(int i=0;i<n;i++)
			printf("%d\n",ans[i]);
	}
	return 0;
}
